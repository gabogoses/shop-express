<%- include('../includes/head.ejs') %> <%- include('../includes/navigation.ejs')
%>
<div class="container">
  <div class="text-center"><h2>Create your account</h2></div>
  <br />
  <% if (errorMessage) { %>
  <div class="alert alert-danger text-center" style="width: 50%; margin: auto;">
    <strong> <%= errorMessage %></strong>
  </div>
  <div><br /></div>
  <% } %>
  <form action="/signup" method="POST" novalidate>
    <div class="row justify-content-center align-items-center">
      <div class="col-4">
        <div class="card">
          <div class="card-body">
            <div class="form-group">
              <input
                type="email"
                class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                name="email"
                placeholder="email"
                value="<%= oldInput.email %>"
              />
            </div>
            <div class="form-group">
              <input
                type="password"
                class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                name="password"
                placeholder="password"
                value="<%= oldInput.password %>"
              />
            </div>
            <div class="form-group">
              <input
                type="Password"
                class="form-control <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                name="confirmPassword"
                placeholder="confirm password"
                value="<%= oldInput.confirmPassword %>"
              />
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button type="submit" id="sendlogin" class="btn btn-success">
              Signup
            </button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
<%- include('../includes/end.ejs') %>
