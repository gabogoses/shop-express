<%- include('../includes/head.ejs') %>
<!-- <%- include('../includes/navigation.ejs')%> -->
<div class="container">
  <br />
  <div class="text-center">
    <a style="font-size: 80px; text-decoration:none;" href="/"> üõçÔ∏è</a>
    <h2>Sign in to Shop Express</h2>
  </div>
  <br />
  <form action="/login" method="POST" autocomplete="off">
    <% if (errorMessage) { %>
    <div
      class="alert alert-danger text-center"
      style="width: 50%; margin: auto;"
    >
      <strong> <%= errorMessage %></strong>
    </div>
    <div><br /></div>
    <% } %>
    <div class="row justify-content-center align-items-center">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <div class="form-group">
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="email"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="password"
            />
          </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button type="submit" id="sendlogin" class="btn btn-success">
            Login
          </button>
          <div class="forgot"><a href="/reset">Forgot password ?</a></div>
        </div>
      </div>
    </div>
    <br />
    <div class="row justify-content-center align-items-center">
      <div class="card text-center" style="width: 18rem;">
        <p2 class="p2"
          >New to Shop Express? <a href="/signup">Create an account.</a></p2
        >
      </div>
    </div>
  </form>
</div>
<%- include('../includes/end.ejs') %>
