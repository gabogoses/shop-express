<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="container">
            <form class="text-center" action="/admin/add-product" method="POST"">
                <p class="h4 mb-4">Add Product</p>
                <input type="text" class="form-control" name="title" id="title" placeholder="Enter name of product">
                <input type="text" class="form-control" name="imageUrl" id="imageUrl" placeholder="Image URL">
                <input type="number" class="form-control" name="price" id="price" step="0.01" placeholder="Price">
                <textarea class="form-control rounded-0" name="description" id="description" rows="3" placeholder="Description"></textarea>
                <button type="submit" class="btn btn-primary">Add Product</button>
            </form>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>