<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
        <div class="container">
            <form class="text-center" action="/admin/add-product" method="POST"">
                <p class=" h4 mb-4">Add
                Product</p>
                <input type="text" class="form-control" name="title" id="title" placeholder="Enter name of product" value="<% if (editing) { %><%= product.title %><% } %>">
                <input type="text" class="form-control" name="imageUrl" id="imageUrl" placeholder="Image URL" value="<% if (editing) { %><%= product.imageUrl %><% } %>">
                <input type="number" class="form-control" name="price" id="price" step="0.01" placeholder="Price" value="<% if (editing) { %><%= product.price %><% } %>">
                <textarea class="form-control rounded-0" name="description" id="description" rows="3" placeholder="Description"><% if (editing) { %>
                <%= product.description %>
                <% } %></textarea>
                <!-- <button type="submit" class="btn btn-primary"><% if (editing) { %>Update Product
                <% } else { %>Add Product
                <% } %></button> -->
                <% if (editing) { %>
                <input type="hidden" value="<%= product.id %>" name="productId">
                <% } %>
                <button class="btn btn-primary" type="submit">
                    <% if (editing) { %>Update Product
                    <% } else { %>Add Product
                    <% } %></button>
            </form>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>