<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (errorMessage) { %>
        <div class="alert alert-danger text-center" style="width: 50%; margin: auto;">
            <strong>
                <%= errorMessage %></strong>
        </div>
        <div><br /></div>
        <% } %>
        <form action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
        <div class="container">
            <form class="text-center" action="/admin/add-product" method="POST"">
                <p class=" h4 mb-4 text-center">Add
                Product</p>
                <input type="text" class="form-control <%= validationErrors.find(e => e.param === 'title') ? 'invalid' : '' %>" name="title" id="title" placeholder="Enter name of product" value="<% if (editing || hasError) { %><%= product.title %><% } %>">
                <input type="text" class="form-control <%= validationErrors.find(e => e.param === 'imageUrl') ? 'invalid' : '' %>" name="imageUrl" id="imageUrl" placeholder="Image URL" value="<% if (editing || hasError) { %><%= product.imageUrl %><% } %>">
                <input type="number" class="form-control <%= validationErrors.find(e => e.param === 'price') ? 'invalid' : '' %>" name="price" id="price" step="0.01" placeholder="Price" value="<% if (editing || hasError) { %><%= product.price %><% } %>">
                <textarea class="form-control <%= validationErrors.find(e => e.param === 'description') ? 'invalid' : '' %>" name="description" id="description" placeholder="Description" rows="3"><% if (editing) { %><%= product.description %><% } %></textarea>
                <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
                <% } %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-primary" type="submit">
                    <% if (editing) { %>Update Product
                    <% } else { %>Add Product
                    <% } %></button>
            </form>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>